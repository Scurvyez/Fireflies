<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alien Biomes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<!-- <success>Always</success> --> <!-- TESTING -->
			<operations>

				<!--==================== Firefly Alien Biomes Spawning ====================-->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/Fireflies.FireflySettingsDef[defName="FireflySettings"]/maxGroupsByBiome</xpath>
					<value>

						<SZ_CrystallineFlats>2</SZ_CrystallineFlats>
						<SZ_RadiantPlains>3</SZ_RadiantPlains>

					</value>
				</li>

            </operations>
		</match>
	</Operation>

</Patch>