<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Biomes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!--==================== Firefly Alpha Biomes Spawning ====================-->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="FF_Firefly"]/race/wildBiomes</xpath>
					<value>

						<AB_FeraliskInfestedJungle>0.20</AB_FeraliskInfestedJungle>
						<AB_GallatrossGraveyard>0.40</AB_GallatrossGraveyard>
						<AB_GelatinousSuperorganism>0.10</AB_GelatinousSuperorganism>
						<AB_MechanoidIntrusion>0.05</AB_MechanoidIntrusion>
						<AB_MycoticJungle>0.15</AB_MycoticJungle>
						<AB_OcularForest>0.20</AB_OcularForest>
						<AB_PyroclasticConflagration>0.02</AB_PyroclasticConflagration>
                        <AB_PropaneLakes>0.02</AB_PropaneLakes>
						<AB_RockyCrags>0.30</AB_RockyCrags>
						<AB_TarPits>0.05</AB_TarPits>

					</value>
				</li>

            </operations>
		</match>
	</Operation>

</Patch>