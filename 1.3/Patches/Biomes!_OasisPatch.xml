<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Biomes! Oasis</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<!--==================== Firefly Biomes! Oasis Spawning ====================-->

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs/ThingDef[defName="FF_Firefly"]/race/wildBiomes</xpath>
					<value>

						<BMT_ChromaticOasis>0.35</BMT_ChromaticOasis>

					</value>
				</li>

            </operations>
		</match>
	</Operation>

</Patch>